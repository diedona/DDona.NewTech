<Window x:Class="DDona.NewTech.WpfApp.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDona.NewTech.WpfApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300" WindowStartupLocation="CenterScreen" Background="#FFF" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <Image Source="/Resources/Images/login.png" Height="200"></Image>
            <TextBlock TextAlignment="Left" Margin="0,10,0,5">Login:</TextBlock>
            <TextBox x:Name="txtLogin"></TextBox>
            <TextBlock TextAlignment="Left" Margin="0,10,0,5">Senha:</TextBlock>
            <PasswordBox></PasswordBox>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Style="{StaticResource btnLogin}" Margin="0,0,15,0" Click="Button_Click">Sair</Button>
                <Button Style="{StaticResource btnLogin}" Click="Button_Click_1">Logar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
